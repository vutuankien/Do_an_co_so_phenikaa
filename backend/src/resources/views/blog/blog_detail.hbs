{{!-- Blog Detail Page --}}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <article class="blog-post">
                <h1 class="fw-bold">{{blog.title}}</h1>
                <p class="text-muted">By <strong>{{blog.author}}</strong> in
                    {{blog.category}}
                    â€¢ Posted on {{blog.createdAt}}
                </p>

                <img src="{{blog.image.[0]}}" class="img-fluid rounded shadow-sm mb-4" alt="{{blog.title}}">

                <div class="content">
                    {{#each blog.content}}
                    {{#if (lookup @root "highlight")}}
                    <blockquote class="blockquote p-3 text-center border-start border-4 border-danger">
                        <em>{{this}}</em>
                    </blockquote>
                    {{else}}
                    <p class="lead">{{this}}</p>
                    {{/if}}
                    {{/each}}
                </div>

                <hr class="my-4">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Views: {{blog.views}}</span>
                    <div>
                        {{#each blog.tags}}
                        <span class="badge bg-primary me-1">{{this}}</span>
                        {{/each}}
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>